{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@radish-la/fresco": ["../../packages/fresco/src/index.tsx"],
      "@radish-la/fresco/*": ["../../packages/fresco/src/*"],
      "@/components/*": ["./components/*"],
      "@/config/*": ["./config/*"]
    }
  },
  "include": ["stories", "./.storybook/*.tsx", "components"],
  "exclude": [".turbo", "dist", "node_modules"]
}
